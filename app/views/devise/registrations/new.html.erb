<div class = 'container'>
  <div class = 'row'>
    <div class = 'col-md-4 col-md-offset-4'>
      
      <div class = 'text-center'>
        <% if params[:plan] == '1' %>
          <h1 class = 'text-center'>Basic Membership</h1>
          <p>Sign up for free and get basic access to the community.</p>
        <% else %>
          <h1 class = 'text-center'>Pro Membership</h1>
          <p>Sign up for the pro account for $10/month and get access to the community and contact information!</p>        
        <% end %>
      </div>
      
      <div class = 'well'>
        <h2>Sign Up</h2>
        <% if params[:plan] == '2' %>
          <%= render 'pro_form' %>
        <% else %>
          <%= render 'basic_form' %>
        <% end %>
        
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>